{
  "emitters": [
    {
      "host": "example.com", // FQDN or IP address
      "port": 514,
      "tls": true, // defaults to true if omitted
      "protocol": "tcp", // "tcp" or "udp"
      "rate": 1000, // in events per second
      // currently supported message types:
      // - "syslog3164": RFC 3164 syslog message
      "messageType": "syslog3164",
      "numEmitters": 1, // number of concurrent emitters to run, each at the EPS rate above
      "eventsPerBatch": 10000, // number of events to send in each batch
      "numBatches": 1, // number of batches to send, use 0 for infinite
      "batchDelay": 10000, // delay in milliseconds between batches
    }
  ],
}
